<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.ac.aut.mytimetable">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyTimeTable"
        android:usesCleartextTraffic="true">
        <activity android:name=".WebviewActivity"></activity>
        <activity android:name=".editRouteActivity" />
        <activity
            android:name=".overview_activity"
            android:label="@string/title_activity_overview"
            android:theme="@style/Theme.MyTimeTable.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WalkThroughActivity"
            android:label="@string/app_name"
            android:theme="@style/WelcomeScreenTheme"></activity>
    </application>

</manifest>